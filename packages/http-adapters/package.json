{
  "name": "@ldesign/http-adapters",
  "version": "0.1.0",
  "description": "HTTP 适配器库 - 提供多种 HTTP 客户端适配器（Fetch, Axios, Alova）",
  "keywords": [
    "http",
    "adapter",
    "fetch",
    "axios",
    "alova",
    "ldesign"
  ],
  "author": "ldesign",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./es/index.d.ts",
      "import": "./es/index.js",
      "require": "./lib/index.cjs"
    },
    "./fetch": {
      "types": "./es/fetch.d.ts",
      "import": "./es/fetch.js",
      "require": "./lib/fetch.cjs"
    },
    "./axios": {
      "types": "./es/axios.d.ts",
      "import": "./es/axios.js",
      "require": "./lib/axios.cjs"
    },
    "./alova": {
      "types": "./es/alova.d.ts",
      "import": "./es/alova.js",
      "require": "./lib/alova.cjs"
    }
  },
  "main": "./lib/index.cjs",
  "module": "./es/index.js",
  "types": "./es/index.d.ts",
  "unpkg": "./dist/index.min.js",
  "jsdelivr": "./dist/index.min.js",
  "files": [
    "README.md",
    "LICENSE",
    "package.json",
    "es",
    "lib",
    "dist"
  ],
  "scripts": {
    "build": "ldesign-builder build -f esm,cjs,dts",
    "build:watch": "ldesign-builder build --watch",
    "build:clean": "ldesign-builder clean && ldesign-builder build",
    "build:analyze": "node ../../scripts/analyze-bundle.js",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "clean": "rimraf es lib dist",
    "prepublishOnly": "pnpm run clean && pnpm run build && pnpm run test:run"
  },
  "dependencies": {
    "@ldesign/http-core": "workspace:*"
  },
  "peerDependencies": {
    "axios": "^1.0.0",
    "alova": "^3.0.0"
  },
  "peerDependenciesMeta": {
    "axios": {
      "optional": true
    },
    "alova": {
      "optional": true
    }
  },
  "devDependencies": {
    "@ldesign/builder": "workspace:*",
    "@types/node": "^22.0.0",
    "axios": "^1.12.2",
    "alova": "^3.3.4",
    "eslint": "^9.18.0",
    "typescript": "^5.7.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}

