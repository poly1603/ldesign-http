{
  "name": "@ldesign/http-react",
  "version": "0.1.0",
  "description": "React adapter for @ldesign/http-core",
  "keywords": [
    "react",
    "http",
    "hooks",
    "typescript"
  ],
  "author": "ldesign",
  "license": "MIT",
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./es/index.d.ts",
      "import": "./es/index.js",
      "require": "./lib/index.cjs"
    },
    "./hooks": {
      "types": "./es/hooks/index.d.ts",
      "import": "./es/hooks/index.js",
      "require": "./lib/hooks/index.cjs"
    },
    "./hooks/*": {
      "types": "./es/hooks/*.d.ts",
      "import": "./es/hooks/*.js",
      "require": "./lib/hooks/*.cjs"
    },
    "./provider": {
      "types": "./es/provider/index.d.ts",
      "import": "./es/provider/index.js",
      "require": "./lib/provider/index.cjs"
    },
    "./provider/*": {
      "types": "./es/provider/*.d.ts",
      "import": "./es/provider/*.js",
      "require": "./lib/provider/*.cjs"
    }
  },
  "main": "./lib/index.cjs",
  "module": "./es/index.js",
  "types": "./es/index.d.ts",
  "unpkg": "./dist/index.min.js",
  "jsdelivr": "./dist/index.min.js",
  "files": [
    "README.md",
    "LICENSE",
    "package.json",
    "es",
    "lib",
    "dist"
  ],
  "scripts": {
    "build": "ldesign-builder build -f esm,cjs,dts",
    "dev": "ldesign-builder build -f esm,cjs,dts --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@ldesign/http-core": "workspace:*"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "@ldesign/http-core": "workspace:*"
  },
  "devDependencies": {
    "@ldesign/builder": "workspace:../../../../../../tools/builder",
    "@types/node": "^22.0.0",
    "typescript": "^5.7.3",
    "vitest": "^3.2.4",
    "eslint": "^9.18.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7"
  }
}