{
  "name": "@ldesign/http",
  "version": "0.1.0",
  "description": "功能强大的 HTTP 请求库 - Monorepo 工作空间，支持多种适配器、拦截器、缓存、重试等高级功能",
  "keywords": [
    "http",
    "request",
    "client",
    "fetch",
    "axios",
    "alova",
    "vue3",
    "typescript",
    "interceptor",
    "cache",
    "retry",
    "adapter",
    "framework-agnostic"
  ],
  "author": "ldesign",
  "license": "MIT",
  "homepage": "https://github.com/ldesign/ldesign/tree/main/packages/http#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/ldesign/ldesign.git",
    "directory": "packages/http"
  },
  "bugs": {
    "url": "https://github.com/ldesign/ldesign/issues"
  },
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./es/index.d.ts",
      "import": "./es/index.js",
      "require": "./lib/index.cjs"
    }
  },
  "main": "./lib/index.cjs",
  "module": "./es/index.js",
  "types": "./es/index.d.ts",
  "unpkg": "./dist/index.min.js",
  "jsdelivr": "./dist/index.min.js",
  "files": [
    "README.md",
    "LICENSE",
    "package.json",
    "es",
    "lib",
    "dist"
  ],
  "scripts": {
    "build": "ldesign-builder build -f esm,cjs,dts",
    "build:core": "pnpm --filter @ldesign/http-core run build",
    "build:vue": "pnpm --filter @ldesign/http-vue run build",
    "build:watch": "pnpm --filter \"./packages/*\" run build:watch",
    "dev": "ldesign-builder build -f esm,cjs,dts --watch",
    "type-check": "pnpm --filter \"./packages/*\" run type-check",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "clean": "pnpm --filter \"./packages/*\" run clean",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "dependencies": {
    "@ldesign/http-core": "workspace:*",
    "@ldesign/http-vue": "workspace:*"
  },
  "peerDependencies": {
    "vue": "^3.4.38"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.0.0",
    "@ldesign/builder": "workspace:*",
    "@types/node": "^22.0.0",
    "eslint": "^9.18.0",
    "happy-dom": "^20.0.10",
    "typescript": "^5.7.3",
    "vitepress": "^1.6.4",
    "vue": "^3.4.38"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "peerDependenciesMeta": {
    "vue": {
      "optional": true
    }
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ]
}